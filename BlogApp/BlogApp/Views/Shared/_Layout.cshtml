<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    @if (ViewData["Page"].Equals("Profile"))
    {
        <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/feed.css" asp-append-version="true"/>
    }else if (ViewData["Page"].Equals("CreateBlog"))
    {
        <link rel="stylesheet" href="~/css/createBlog.css" asp-append-version="true"/>
    }else if (ViewData["Page"].Equals("BlogDetails"))
    {
        <link rel="stylesheet" href="~/css/blogDetails.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/feed.css" asp-append-version="true"/>
    }else if (ViewData["Page"].Equals("UserList") || ViewData["Page"].Equals("Requests"))
    {
        <link rel="stylesheet" href="~/css/userList.css" asp-append-version="true"/>
    }
    else
    {
        <link rel="stylesheet" href="~/css/createPost.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/postView.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/css/feed.css" asp-append-version="true"/>
    }
    <link rel="stylesheet" href="~/BlogApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Nexus</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="menu">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Entry" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Entry" asp-action="Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Feed</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">FAQ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">About us</a>
                    </li>
                    @if (User.IsInRole(Role.Admin))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="UserList">User list</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Create">Create Post</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/img/search.svg" alt="search" width="20" height="20"/>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Entry" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

@RenderBody()

<footer class="border-top footer text-muted">
    <div class="footer-data">
        Copyright &copy; 2023
        <div id="social-networks">
            <a href="https://web.telegram.org/">
                <img src="~/img/telegram_icon.svg" alt=""/>
            </a>
            <a href="https://www.facebook.com/">
                <img src="~/img/facebook_icon.svg" alt=""/>
            </a>
            <a href="https://twitter.com/">
                <img src="~/img/twitter_icon.svg" alt=""/>
            </a>
        </div>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@if (ViewData["Page"].Equals("Profile")){
    <script src="~/js/profile.js" asp-append-version="true"></script>
}
<partial name="_ValidationScriptsPartial"/>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>