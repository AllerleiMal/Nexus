@model User
<div id="follow">
    <div id="followed-image">
        <div id="follow-image-wrapper">
            @if (Model.ProfileImage is null)
            {
                <img src="~/img/user_image.png" alt=""/>
            }
            else
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.ProfileImage)" alt=""/>
            }
        </div>
    </div>
    <div id="followed-name">
        <a asp-controller="User" asp-action="Profile" asp-route-id="@Model.Id">
            @Model.Username
        </a>
    </div>
</div>