@model CreatePostViewModel

@{
    ViewData["Title"] = "Create post";
}
<div class="container" id="create-post-container">
    <form asp-action="CreatePost" method="post" id="create-post-form" enctype="multipart/form-data">
        <h1 id="form-title" class="display-3">Create post</h1>

        <div id="title-block" class="post-creation-block">
            <h1 class="display-6">Title</h1>
            <textarea class="textarea" id="title" placeholder="Enter the post title" asp-for="Title"></textarea>
            <span asp-validation-for="Title" class="error-validation"></span>
        </div>

        <div class="post-creation-block">
            <h1 class="display-6">Blog</h1>
            <select asp-for="BlogId" asp-items="@Model.UserBlogs"></select>
            <span asp-validation-for="BlogId" class="error-validation"></span>
        </div>

        <div class="post-creation-block">
            <h1 class="display-6">Preview image</h1>
            <input asp-for="PreviewImage" id="imageInput" placeholder="Choose file"/>
            <span asp-validation-for="PreviewImage" class="error-validation"></span>
        </div>

        <div id="keywords-block" class="post-creation-block">
            <h1 class="display-6">Key words</h1>
            <textarea class="textarea" id="keywords" placeholder="Enter the post keywords with space as delimiter" asp-for="KeyWords"></textarea>
            <span asp-validation-for="KeyWords" class="error-validation"></span>
        </div>

        <div id="description-block" class="post-creation-block">
            <h1 class="display-6">Preview description</h1>
            <textarea class="textarea" placeholder="Put description here" id="description" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="error-validation"></span>
        </div>

        <div id="content-block" class="post-creation-block">
            <h1 class="display-6">Content</h1>
            <textarea class="textarea" placeholder="Put post text here" id="content" asp-for="Content"></textarea>
            <span asp-validation-for="Content" class="error-validation"></span>
        </div>

        <input type="submit" id="create-post-btn" value="Create"/>
    </form>
</div>